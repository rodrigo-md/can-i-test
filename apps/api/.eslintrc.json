{
  "extends": ["../../.eslintrc.json", "airbnb-typescript/base"],
  "plugins": ["import"],
  "ignorePatterns": ["!**/*", "src/environments/*.ts", "jest.config.ts"],
  "parserOptions": {
    "project": "apps/api/tsconfig.eslint.json"
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {
        "@typescript-eslint/no-use-before-define": [
          "error",
          {
            "functions": false,
            "classes": true,
            "variables": true,
            "allowNamedExports": true
          }
        ]
      }
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    }
  ]
}
