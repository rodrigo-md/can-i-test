{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/ui/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/web:webpack",
      "outputs": [
        "{options.outputPath}"
      ],
      "defaultConfiguration": "production",
      "options": {
        "compiler": "babel",
        "outputPath": "dist/apps/ui",
        "index": "apps/ui/src/index.html",
        "baseHref": "/",
        "main": "apps/ui/src/main.tsx",
        "polyfills": "apps/ui/src/polyfills.ts",
        "tsConfig": "apps/ui/tsconfig.app.json",
        "assets": [
          "apps/ui/src/favicon.ico",
          "apps/ui/src/assets"
        ],
        "styles": [],
        "scripts": [],
        "webpackConfig": "@nrwl/react/plugins/webpack"
      },
      "configurations": {
        "development": {
          "extractLicenses": false,
          "optimization": false,
          "sourceMap": true,
          "vendorChunk": true
        },
        "production": {
          "fileReplacements": [
            {
              "replace": "apps/ui/src/environments/environment.ts",
              "with": "apps/ui/src/environments/environment.prod.ts"
            }
          ],
          "optimization": true,
          "outputHashing": "all",
          "sourceMap": false,
          "namedChunks": false,
          "extractLicenses": true,
          "vendorChunk": false
        }
      }
    },
    "serve": {
      "executor": "@nrwl/web:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "ui:build",
        "hmr": true,
        "proxyConfig": "apps/ui/proxy.conf.json"
      },
      "configurations": {
        "development": {
          "buildTarget": "ui:build:development"
        },
        "production": {
          "buildTarget": "ui:build:production",
          "hmr": false
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "apps/ui/**/*.{ts,tsx,js,jsx}"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": [
        "coverage/apps/ui"
      ],
      "options": {
        "jestConfig": "apps/ui/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "deploy": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "npx nx run ui:docker",
          "tools/post-docker-push.sh {args.docker-tag} {args.max-attempts} {args.project-name}"
        ],
        "parallel": false
      }
    },
    "docker": {
      "executor": "@nx-tools/nx-docker:build",
      "options": {
        "push": false,
        "tags": [
          "rodrigomartinezd/can-i-test-ui:latest"
        ],
        "metadata": {
          "enabled": true,
          "images": [
            "rodrigomartinezd/can-i-test-ui"
          ],
          "tags": [
            "latest",
            "type=sha,prefix=,format=long"
          ]
        },
        "file": "apps/ui/Dockerfile"
      }
    }
  },
  "tags": []
}